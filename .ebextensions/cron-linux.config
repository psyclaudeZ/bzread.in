files:
    "/etc/cron.d/test_cron":
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * * root /usr/local/bin/test_script.sh

    "/usr/local/bin/test_script.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            
            date > /tmp/date
            echo "Hello from test_cron" >> /var/log/test_cron.log
            
            exit 0

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/test_cron.bak"